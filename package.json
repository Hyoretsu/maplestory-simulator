{
	"name": "maple-simulator",
	"private": true,
	"workspaces": [
		"backend",
		"frontend"
	],
	"scripts": {
		"prepare": "husky install"
	},
	"lint-staged": {
		"**/*.(json|js|jsx|ts|tsx)": [
			"rome check --apply"
		],
		"backend/src/**/*.ts": [
			"npm run -w backend test --bail"
		],
		"frontend/src/**/*.(ts|tsx)": [
			"npm run -w frontend test --bail"
		]
	},
	"devDependencies": {
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"rome": "^12.0.0",
		"typescript": "^5.0.4"
	}
}
