{
	"name": "maple-simulator",
	"private": true,
	"workspaces": [
		"backend",
		"frontend"
	],
	"scripts": {
		"prepare": "husky install"
	},
	"lint-staged": {
		"**/*.(json|js|jsx|ts|tsx)": [
			"biome format --write"
		],
        "backend/prisma/schema.prisma": [
            "pnpm -F backend prisma:migrate-deploy"
        ],
		"backend/src/**/*.ts": [
			"pnpm -F backend test --bail"
		],
		"frontend/src/**/*.(ts|tsx)": [
			"pnpm -F frontend test --bail"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^1.2.2",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"typescript": "^5.0.4"
	}
}
