{
	"name": "maple-simulator",
	"private": true,
	"workspaces": ["backend", "frontend"],
	"scripts": {
		"prepare": "husky install"
	},
	"lint-staged": {
		"**/*.(json|js|jsx|ts|tsx)": ["biome format --write"],
		"backend/prisma/schema.prisma": ["cd backend && pnpm prisma:migrate"],
		"backend/src/**/*.ts": ["cd backend && bun test --bail"],
		"frontend/src/**/*.(ts|tsx)": ["cd frontend && pnpm test --bail"]
	},
	"devDependencies": {
		"@biomejs/biome": "^1.3.3",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.2"
	}
}
